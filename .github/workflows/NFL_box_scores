name: NFL Box Score Scraper

on:
  schedule:
    # Run every Tuesday at 10:00 AM UTC during NFL season (September 1 - January 15)
    - cron: '0 10 * 9-12 2'  # September through December
    - cron: '0 10 1-15 1 2'  # January 1-15
  
  workflow_dispatch:  # Allows manual triggering

jobs:
  scrape-nfl-data:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      with:
        token: ${{ secrets.GITHUB_TOKEN }}
    
    - name: Set up Python
      uses: actions/setup-python@v5
      with:
        python-version: '3.11'
    
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install requests beautifulsoup4 pandas
    
    - name: Download scraper script
      run: |
        curl -o scraper.py https://raw.githubusercontent.com/jameskemper/sports_data_library/refs/heads/master/NFL/box_scores/box_score_scraper.py
    
    - name: Run scraper
      env:
        OUTPUT_DIR: 'NFL/box_scores/2025'
        START_WEEK: 1
        END_WEEK: 22
      run: |
        python scraper.py
    
    - name: Commit and push changes
      run: |
        git config --local user.email "github-actions[bot]@users.noreply.github.com"
        git config --local user.name "github-actions[bot]"
        git add NFL/box_scores/2025/*.csv
        git diff --staged --quiet || git commit -m "Update NFL box scores - Week $(date +'%Y-%m-%d')"
        git push
